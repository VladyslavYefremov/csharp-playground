<Window x:Class="Client.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Client"
		mc:Ignorable="d"
		Title="Examples" Height="500" Width="900">
	<Window.DataContext>
		<ExamplesDataContext xmlns="clr-namespace:Client" />
	</Window.DataContext>

	<Grid>
		<TabControl ItemsSource="{Binding Tabs}" Margin="0,10,0,0">
			<TabControl.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Header}" />
				</DataTemplate>
			</TabControl.ItemTemplate>
			<TabControl.ContentTemplate>
				<DataTemplate >
					<ListView ItemsSource="{Binding Messages}">
						<ListView.View>
							<GridView>
								<GridViewColumn DisplayMemberBinding="{Binding Time}" Header="Time" Width="150"/>
								<GridViewColumn DisplayMemberBinding="{Binding Text}" Header="Text" Width="700"/>
							</GridView>
						</ListView.View>
					</ListView>
				</DataTemplate>
			</TabControl.ContentTemplate>
		</TabControl>
	</Grid>
</Window>